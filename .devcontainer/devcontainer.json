{
  "name": "Open-Assistant",
  "image": "mcr.microsoft.com/vscode/devcontainers/universal",
  "features": {
    "ghcr.io/devcontainers-contrib/features/pre-commit:2": {
      "version": "latest"
    }
  },
  "portsAttributes": {
    "3000": {
      "label": "Application",
      "onAutoForward": "openPreview"
    }
  },
  "onCreateCommand": "(cd website/ && npm install) && docker compose build",
  "postCreateCommand": "pre-commit && pre-commit install"
}
